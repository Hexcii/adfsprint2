<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:security="http://www.springframework.org/schema/security"
   xmlns:beans="http://www.springframework.org/schema/beans" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.2.xsd">
       
    <security:http auto-config="true" use-expressions="true">
        <security:intercept-url pattern="/lecturer/**" access="ROLE_LECTURER" />
        <security:intercept-url pattern="/deferral/**" access="ROLE_LECTURER" />
        <security:intercept-url pattern="/module/**" access="ROLE_LECTURER" />
        <security:intercept-url pattern="/student/**" access="ROLE_LECTURER" />
        
        <security:intercept-url pattern="/deferral/addNewDeferral" access="ROLE_STUDENT" />
        <security:intercept-url pattern="/deferral/addDeferralAndFile" access="ROLE_STUDENT" />
        <security:intercept-url pattern="/deferral/displayDeferral" access="ROLE_STUDENT" />
        
        <security:intercept-url pattern="/student/modifyStudent" access="ROLE_STUDENT" />
        <security:intercept-url pattern="/student/modifyStudentForm" access="ROLE_STUDENT" />
        <security:intercept-url pattern="/module/displayModule" access="ROLE_STUDENT" />
        <security:intercept-url pattern="/module/displayModules" access="ROLE_STUDENT" />
        
        <security:intercept-url pattern="/admin/**" access="ROLE_ADMIN" />
		<security:form-login login-page="/login" default-target-url="/home"
         		authentication-failure-url="/login?error"/>
		<security:logout logout-success-url="/login?logout" />
    </security:http>
     
     <security:authentication-manager>
        <security:authentication-provider>
            <security:user-service>
                <security:user name="donna" password="donna" authorities="ROLE_LECTURER" />
                <security:user name="fabien" password="fabien" authorities="ROLE_STUDENT" />
                <security:user name="declan" password="declan" authorities="ROLE_STUDENT" />
                <security:user name="admin" password="admin" authorities="ROLE_ADMIN" />
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager> 
    
